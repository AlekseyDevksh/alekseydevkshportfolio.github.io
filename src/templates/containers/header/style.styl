.header
    width: 100%;
    height: 50px;
    position: absolute;
    top: 0;
    z-index: 200;
    color: rgba(225, 246, 255, 0.3);
    background: #1c262b;

    @media screen and (min-width: 768px)
        height: 100%;
        width: 120px;

    img
        display: block;
        max-height: 100%;

    &__wrap
        bottom: 0;
        text-align: center;
        left: 0;
        position: fixed;
        z-index: 2000;
        width: 120px;
        top: 0;
        overflow: auto;
        overflow-x: hidden;

    &__menu
        ul
            padding: 0;
            margin: 0;
            list-style: none;
            text-align: center;
            overflow: auto;

            li
                font-size: 10px;
                letter-spacing: .07rem;
                text-transform: uppercase;
                border-bottom: 1px solid rgba(225, 246, 255, 0.07);

                a
                    color: rgba(225, 246, 255, 0.45);
                    display: block;
                    padding: 2rem 1rem;

                    &:hover
                        color: rgba(225, 246, 255, 0.7);

            &.current_page_item
                a
                    color: #fff;

    &__bottom
        width: 100%;
        margin-top: 2em;
        text-align: center;
        font-size: .875em;

        @media screen and (min-width: 768px)
            position: absolute;
            bottom: 0;

    &__social
        margin: 1rem 0;
        padding: 0 6px;
        list-style: none;
        text-align: center;

        li
            display: inline-block;
            padding: 0;
            margin-bottom: -3px;

            a
                font-size: 14px;
                height: auto;
                border: 0;
                line-height: 22px;
                width: 18px;
                margin: 0;
                border-radius: 4px;
                float: none;
                color: rgba(225, 246, 255, 0.3);
                display: block;
                text-align: center;
                font-family: "fontello";

.copy-text
    font-size: 12px;


.toggle-link
    display: block;
    width: 50px;
    line-height: 50px;
    height: 50px;
    text-align: center;
    cursor: pointer;
    overflow: hidden;
    color: #fff;

.menu-toggle
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    border-right: 2px solid rgba(255, 255, 255, 0.08);

    @media screen and (min-width: 768px)
        display: none;


.site-title
    display: none;
    position: absolute;
    top: 0;
    left: 70px;
    width: 252px;
    line-height: 50px;
    margin: 0;
    padding: 0;
    font-weight: bold;
    font-size: 12px;
    letter-spacing: 0;
    color: #FFF;

    @media screen and (min-width: 768px)
        display: block;
        position: static;
        width: auto;
        line-height: 1.2;
        text-align: center;
        padding: .8em;
        color: #fff;
        background: #2ba163;


.mobile-title
    display: block;

    @media screen and (min-width: 768px)
        display: none;



